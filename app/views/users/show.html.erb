<div class="container">
  <h1 class="container__title">User Profile</h1>
  <div class="container__card">
    <div class="container__description">
      <img class="container__img"src="https://randomuser.me/api/portraits/<%= @user.id%2 == 0?'women':'men'%>/<%= @user.id%>.jpg"/>
        <div class="container__text">
          <p>Name: <%= @user.name %></p>
          <p>Bio: <%= @user.bio %></p>
          <p>Age: <%= @user.age %></p>
        </div>
      </div>
    </div>
  <div class="button">
    <button class="button button--static"><%= link_to "Edit", edit_path %></button>
    <%= button_to('Delete', destroy_path, method: "delete", remote: true, data: { confirm: 'Are you sure?', disable_with: 'deleting...' }, class: "button button--delete") %>
  </div>
</div>
